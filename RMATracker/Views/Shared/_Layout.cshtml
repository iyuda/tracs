                    dialog.option("width", $(window).width() / 2);
                    $(window).resize(function () {
                        var dialog = $('#' + divName).data("ui-dialog");
                        dialog.option("position", dialog.options.position);
                        dialog.option("width", $(window).width() / 2);
                        if (!$('.navbar-toggle').hasClass('collapsed'))
                            $('.navbar-toggle').click();
                    });
                    $("body").css({ overflow: 'hidden' })
                }
